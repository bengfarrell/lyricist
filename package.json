{
  "name": "lyricist",
  "version": "1.1.3",
  "description": "A LitElement-based web component app for creating songs with draggable lyrics",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "playwright test",
    "test:integration:ci": "playwright test --reporter=line",
    "test:integration:ui": "playwright test --ui",
    "test:integration:headed": "playwright test --headed",
    "test:integration:debug": "playwright test --debug",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "lit",
    "web-components",
    "lyrics",
    "song-creator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.0.0",
    "@web/test-runner": "^0.18.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^1.0.0",
    "workbox-window": "^7.4.0"
  }
}
